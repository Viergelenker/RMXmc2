<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/dialogDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es ist ein Fehler bei der Verbindung mit dem RMX Server mit folgender Fehlermeldung aufgetreten:"
        android:textAlignment="center" />

    <ScrollView
        android:id="@+id/MainView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/errorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorAccent"/>
    </ScrollView>

    <TextView
        android:id="@+id/dialogDescription2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stelle sicher, dass alle Geräte richtig konfiguriert sind und verbinde Dich anschließend erneut."
        android:textAlignment="center"
        android:layout_below="@+id/MainView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_below="@+id/dialogDescription2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>