        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainSelector"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/connectionStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.widget.VerticalSeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@+id/button_F11"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/speedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_switchLight"
        android:layout_marginTop="13dp"
        android:text="0"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>

    <io.ghyeok.stickyswitch.widget.StickySwitch
        android:id="@+id/switch_direction"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:iconPadding="8dp"
        app:iconSize="25dp"
        app:leftIcon="@drawable/ic_backward"
        app:leftText="Rück"
        app:rightIcon="@drawable/ic_forward"
        app:rightText="Vor"
        app:selectedTextSize="12sp"
        app:textSize="12sp"
        app:sliderBackgroundColor="@color/colorPrimary"
        app:switchColor="@color/colorAccent"
        app:textColor="@color/colorPrimary"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"/>

